{
  "manifest_version": 3,
  "name": "TheOrangeFilter",
  "short_name": "OrangeFilter",
  "description": "A smart content filter that blocks specific political figures from your browsing experience.",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "offscreen",
    "declarativeNetRequest",
    "activeTab",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Trump Filter Settings"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>", "http://localhost/*", "http://127.0.0.1/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "offscreen.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
